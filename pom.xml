    <groupId>com.github.saksham</groupId>
    <artifactId>hulaki</artifactId>
    <name>Hulaki</name>
    <version>2.0.1-SNAPSHOT</version>
    <packaging>jar</packaging>
    <description>
        Hulaki (postman in Nepali) is a very simple fake SMTP server designed for unit and system testing applications
        that send email messages.
    </description>
    <url>https://github.com/saksham/hulaki</url>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>
    <licenses>
